<div class="users-list">
    <h2>Lista de Usuarios</h2>
    
    {% if usuarios is empty %}
        <p>No hay usuarios disponibles.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido 1</th>
                    <th>Apellido 2</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {% for usuario in usuarios %}
                    <tr>
                        <td>{{ usuario.name }}</td>
                        <td>{{ usuario.surname1 }}</td>
                        <td>{{ usuario.surname2 }}</td>
                        <td>{{ usuario.email }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
